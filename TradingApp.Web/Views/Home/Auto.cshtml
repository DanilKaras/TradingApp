@model TradingApp.Domain.Models.ServerRelated.ServerRequestsStats

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auto.css" rel="stylesheet"/>
}

<div id="auto-forecast-link" data-request-url="@Url.Action("Auto", "Home")"></div>
@*<div id="show-forecast-elements" data-request-url="@Url.Action("GetForecastData", "Home")"></div>*@
@*<div id="get-latest-assets" data-request-url="@Url.Action("GetLatestAssets", "Home")"></div>*@

<div class="container-fluid">
<div class="col-md-3 col-lg-3">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel-group">
                <div class="panel panel-default panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a id="collapsable-header" data-toggle="collapse" data-target="#collapse1" href="#collapse1"></a>
                            <a asp-action="Index" asp-controller="Home">
                                <i id="auto-arrow-back" class="fa fa-lg fa-arrow-left"></i>
                            </a><span id="menu-span">Menu</span>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse in">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4">
                                        <label>Calls Made</label>
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-lg-offset-2 col-md-offset-2">
                                        <label>Calls Left</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-lg-4">
                                        <label id="made-number">@Model.CallsMade.Histo</label>
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-lg-offset-2 col-md-offset-2">
                                        <label id="left-number">@Model.CallsLeft.Histo</label>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div id="trigger-block">
                                    <h4>
                                        <label>Periods</label>
                                    </h4>
                                    <label class="toggle label-radiobtn">
                                        <input type="radio" value="200" name="toggle" id="rb-200" class="select-toggle rb-less" checked> <span class="label-text">200</span>
                                    </label>

                                    <label class="toggle label-radiobtn">
                                        <input type="radio" value="230" name="toggle" id="rb-230" class="select-toggle rb-less"> <span class="label-text">230</span>
                                    </label>

                                    <label class="toggle label-radiobtn">
                                        <input type="radio" value="576" name="toggle" id="rb-576" class="select-toggle rb-more"> <span class="label-text">576</span>
                                    </label>

                                    <label class="toggle label-radiobtn">
                                        <input type="radio" value="720" name="toggle" id="rb-720"class="select-toggle rb-more"> <span class="label-text">720</span>
                                    </label>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <h4 class="label-text">
                                    <label>Periods</label>
                                </h4>
                                <div id="period-block">
                                    <label class="toggle label-radiobtn">
                                        <input type="radio" value="24" name="period" class="period-toggle per-24" checked> <span class="label-text">24</span>
                                    </label>

                                    <label class="toggle label-radiobtn">
                                        <input type="radio" value="72" name="period" class="period-toggle per-72"> <span class="label-text">72</span>
                                    </label>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <h4 class="label-text">
                                    <label>Add Seasonality</label>
                                </h4>
                                <div>
                                    <label class="add-seasonality">
                                        <input id="seasonality-houly" type="checkbox" name="check"> <span class="label-text">Houly</span>
                                    </label>
                                    <label class="add-seasonality">
                                        <input id="seasonality-daily" type="checkbox" name="check"> <span class="label-text">Daily</span>
                                    </label>
                                </div>
                            </li>
                            <li class="list-group-item">

                                <div class="row">
                                    <div class="col-md-1 col-lg-1 col-lg-offset-3 col-md-offset-3">
                                        <button type="button" id="run-auto-forecast" class="btn btn-primary">FORECAST!</button>
                                    </div>
                                    <div class="pull-right col-md-3 col-lg-3" id="instant-placeholder">
                                        @await Html.PartialAsync("~/Views/Shared/_BTCForecast.cshtml")
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel-group">
                <div class="panel panel-default panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title" id="assets-list-panel">
                            <a href="#" id="get-latest-assets-link">
                                <i class="fa fa-lg fa-upload"></i>
                            </a>
                            <a id="collapsable-header" data-toggle="collapse" data-target="#collapse2" href="#collapse2"></a>
                            <span id="result-span">Result</span>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse in">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <h4>Strong Positive</h4>
                                <div class="input-group">
                                    <select class="selectpicker" id="strong-positive-picker" data-live-search="true"></select>
                                    <span class="input-group-btn">
                                        <button type="button" id="show-strong-positive" class="btn btn-success">Show</button>
                                    </span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <h4>Positive</h4>
                                <div class="input-group col-md-12">
                                    <select class="selectpicker" id="positive-picker" data-live-search="true"></select>
                                    <span class="input-group-btn">
                                        <button type="button" id="show-positive" class="btn btn-info">Show</button>
                                    </span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <h4>Neutral</h4>
                                <div class="input-group">
                                    <select class="selectpicker" id="neutral-picker" data-live-search="true"></select>
                                    <span class="input-group-btn">
                                        <button type="button" id="show-neutral" class="btn btn-default">Show</button>
                                    </span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <h4>Negative</h4>
                                <div class="input-group">
                                    <select class="selectpicker" id="negative-picker" data-live-search="true"></select>
                                    <span class="input-group-btn">
                                        <button type="button" id="show-negative" class="btn btn-danger">Show</button>
                                    </span>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-9 col-lg-9">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#table-tab">Table</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#forecast-tab">Forecast</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#content-tab">Components</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#report-tab">Report</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active container" id="table-tab">
            <div class="pre-scrollable">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th></th>
                        <th>ds</th>
                        <th>yhat</th>
                        <th>yhat_lower</th>
                        <th>yhat_upper</th>
                    </tr>
                    </thead>
                    <tbody id="table-content">
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane container" id="forecast-tab">
            <div class="pre-scrollable">
                <h2 id="indicator-text"></h2>
                <h2 class="col-md-offset-3" id="asset-name"></h2>
                <div id="forecast-place"></div>
            </div>
        </div>

        <div class="tab-pane container" id="content-tab">
            <div class="pre-scrollable">
                <h2 class="col-md-offset-3">Components</h2>
                <div id="components-place"></div>
            </div>
        </div>

        <div class="tab-pane container" id="report-tab">
            <div class="pre-scrollable">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Asset</th>
                        <th>Indicator</th>
                        <th>Rate</th>
                    </tr>
                    </thead>
                    <tbody id="table-report-content">
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
</div>

@section Scripts {
    <script src="~/js/pages/auto.js" asp-append-version="true"></script>
}