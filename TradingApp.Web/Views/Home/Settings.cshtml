@section Styles{
    <link rel="stylesheet" href="~/css/pages/settings.css"/>
}

<div id="load-exchanges" data-request-url="@Url.Action("LoadExchanges", "Data")"></div>
<div id="update-byexchange-link" data-request-url="@Url.Action("UpdateExchanges", "Data")"></div>
<div class="row">
    <div class="col-md-4 col-lg-4 settings">
        <div class="panel-group">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    @*                    <div class="panel-heading">Settings</div>*@
                    <div class="panel-heading">
                        <a asp-action="Index" asp-controller="Home">
                            <i class="fa fa-lg fa-arrow-left" title="Back"></i>
                        </a><span class="pull-right">Settings</span>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-md-2 col-lg-2"></label>
                            <div class="col-md-8 col-lg-8">
                                <span>Exchanges:</span>
                                <select class="selectpicker" id="exhanges-ddl" data-live-search="true"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 input-group">
                                <span class="input-group-addon">BTC:</span>
                                <input type="text" class="form-control" id="btc-name" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 input-group">
                                <span class="input-group-addon">Upper Border:</span>
                                <input type="text" class="form-control" id="upper">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 input-group">
                                <span class="input-group-addon">Lower Border:</span>
                                <input type="text" class="form-control" id="lower">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-5 col-md-offset-5 col-md-2 col-lg-2 ">
                                <button id="update-by-exchange" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/settings.js"></script>
}
