@section Styles{

}
<head>
    <title>Trading Settings</title>
</head>
<div id="load-exchanges" data-request-url="@Url.Action("LoadExchanges", "Data")"></div>
<div id="update-byexchange-link" data-request-url="@Url.Action("UpdateExchanges", "Data")"></div>
@* <div id="test-link" data-request-url="@Url.Action("TestTelegram", "Data")"></div> *@
@* <div id="test-link-message" data-request-url="@Url.Action("TestTelegramMessage", "Data")"></div> *@
<div class="page-content">
    <div class="page-content-inner">
        <div class="row">
            <div class="col-md-6">
                <div class="portlet light " id="settings-block" style="">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki sbold">Settings</span>
                        </div> 
                        <div class="tools">
                            @* <button id="test-message" class="btn btn-danger"> Test </button> *@
                            @* <button id="test" class="btn btn-circle"> Test </button> *@
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div action="#" class="form-horizontal form-bordered">                       
                            <div class="form-body">
                                <div class="form-group">                                
                                    <label class="control-label col-md-3">Exchanges:</label> 
                                    <div class="col-md-4"> 
                                        <select class="selectpicker" id="exhanges-ddl" data-live-search="true"></select> 
                                    </div> 
                                </div>
                                <div class="form-group"> 
                                    <label class="control-label col-md-3">BTC:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="btc-name" disabled> 
                                    </div> 
                                </div> 
                                <div class="form-group"> 
                                    <label class="control-label col-md-3">Upper Border:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="upper"> 
                                    </div> 
                                </div> 
                                <div class="form-group last"> 
                                    <label class="control-label col-md-3">Lower Border:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="lower"> 
                                    </div> 
                                </div>
                                <div class="form-group"> 
                                    <label class="control-label col-md-3">Upper Width:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="upper-width"> 
                                    </div> 
                                </div> 
                                <div class="form-group"> 
                                    <label class="control-label col-md-3">Lower Width:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="lower-width"> 
                                    </div> 
                                </div> 
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button  id="update-by-exchange" class="btn blue-madison">
                                                <i class="fa fa-check"></i> Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>         
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/index.js"></script>
}